<html>

<head>
  <title>Movie database</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- styles -->
  <link href="http://netdna.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet" media="screen">
  <link href="stylesheets/style.css" rel="stylesheet" media="screen">
  <link rel="icon" href="http://i.istockimg.com/file_thumbview_approve/79813167/3/stock-illustration-79813167-polar-bear-standing-icon-design.jpg">

  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <script src="http://code.jquery.com/jquery-1.11.2.min.js" type="text/javascript"></script>
  <script src="http://netdna.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js" type="text/javascript"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.12/angular.min.js"></script>
  <script>
    $(document).ready(function() {
      var email, pass;
      $("#login").click(function() {

        email = $("#Email").val();
        pass = $("#password").val();
        if(email==null && pass==null){
          $("login_status").html("Please enter the email and password");
        }
        else{
        $.post("http://localhost:3000/login", {
          email: email,
          password: pass
        }, function(data) {
          if (data === 'log in success') {
          window.location ="http://localhost:3000/users";
          } else {
            window.location ="http://localhost:3000/";
          }
        });
      }
      });
    });

    //check if email is correct
    $(document).ready(function() {

      $('#Email').blur(function() {
        $.ajax({
          type: "POST",
          url: "http://localhost:3000/signup/check_email_exists",
          data: {
            email: $("#Email").val()
          },
          success: function(result) {
            if (result == "OK") {
              $("#email_status").html("This email doesn't exist");
            } else {
              $("#email_status").html("This email exists");
            }
          }
        });
      });
    });
  </script>





</head>

<body>
  <div class="container">

    <div class="header">
      <h1>Welcome!^.^</h1>
      <hr>
      <h1 class="lead">Movie DB</h1>
    </div>
    <p>
        <span id="login_status"></span>
    </p>
    <div class="todo-form">
      <form>
        <div class="form-group">
          <input type="text" id="Email" class="form-control input-lg" placeholder="Enter email...">
          <span id="email_status"></span>
          <br>
          <br>
          <input type="text" id="password" class="form-control input-lg" placeholder="Enter pasword...">
        </div>
        <button type="login" id="login" class="btn btn-primary btn-lg btn-block">Login</button>
      </form>
      <button type="button" onclick="location.href='http://localhost:3000/signup';" id="signup" class="btn btn-primary btn-lg btn-block">Sign up</button>
    </div>
  </div>
</body>

</html>
